@model ReviewsGameModel

@{
    ViewData["Title"]="CreateReview";
}
<hr  />
<div class="row">
    <div class="col-6">

        <div class="card">
            <div class="card-header">
                <h5>Insert new Review</h5>

            </div>

            <div class="card-body">
        <form asp-controller="Reviews" asp-action="Index" method="post">
            <div class=" mb-3">
                <label class="form-label">Name</label>
                <input asp-for=userName type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Comment</label>
                <input asp-for=Comment type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Stars</label>
                <input asp-for=Stars type="text" class="form-control">
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Insert</button>
            </div>
        </form>

            </div>

