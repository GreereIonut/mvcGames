@model ReviewsGameModel

@if (Model.Reviews.Any())
{
    <ul>
        @foreach (var review in Model.Reviews)
        {
            <li>
                <strong>@review.userName:</strong> @review.Comment
                <br />
                Rating: @review.Stars
            </li>
        }
    </ul>
}
else
{
    <p>No reviews available for this game.</p>
}