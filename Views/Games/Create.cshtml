
@model GamesViewModel

@{
    ViewData["Title"]="CreateGame";
}
<hr  />
<div class="row">
    <div class="col-6">

        <div class="card">
            <div class="card-header">
                <h5>Insert new Game</h5>

            </div>

            <div class="card-body">
        <form asp-controller="Games" asp-action="CreateGame" method="post">
            <div class=" mb-3">
                <label class="form-label">Game Name</label>
                <input asp-for=Title type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Game Description</label>
                <input asp-for=Description type="text" class="form-control">
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Insert</button>
            </div>
        </form>

            </div>

            <div class="card">

            </div>

        </div>





            </div>
</div>